# IoT Identity Gateway Environment Configuration
# Copy this to .env and fill in the actual values

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Anvil RPC URL (default local Anvil)
RPC_URL=http://127.0.0.1:8545

# Admin private key for contract interactions (from Anvil)
# Get this from `anvil` output when you start the chain
PRIVATE_KEY_ADMIN=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# RegistryMock contract address (deploy first with forge script)
# Get this after running deployment script
REGISTRY_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3

# =============================================================================
# RSA ACCUMULATOR PARAMETERS  
# =============================================================================

# RSA modulus N (from params.json) - 2048-bit production parameters
N_

# Generator g (from params.json)
G_HEX=0x4

# =============================================================================
# TRAPDOOR INFORMATION (KEEP SECRET!)
# =============================================================================
# CRITICAL: This value must NEVER be shared or stored on blockchain
# Only the gateway should have access to this for revocation operations

# Carmichael's lambda function Î»(N) = lcm(p-1, q-1)
# This enables trapdoor operations for efficient device removal
LAMBDA_N_

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database file path
DB_PATH=gateway.db

# =============================================================================
# SERVER CONFIGURATION  
# =============================================================================

# FastAPI server host and port
HOST=127.0.0.1
PORT=8000
